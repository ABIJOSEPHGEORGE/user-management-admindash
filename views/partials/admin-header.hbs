<body>
    <section id="menu">
        <div class="logo">
            <h2>Admin Panel</h2>
        </div>
 
        <div class="items">
            <li><ion-icon name="pie-chart-outline"></ion-icon><a href="/admin/dashboard">Dashboard</a></li>
